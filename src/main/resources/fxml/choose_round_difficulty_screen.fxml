   </Button>
   <Button fx:id="medDifficultyButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="150.0" text="Medium"
           GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
